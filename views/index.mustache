<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="wrapper">
      <form active="/" method="post">
        <input type="text" name="item" placeholder="Enter a task">
        <button type="submit" name="button">Submit</button>
      </form>
    <div class="todos">
      <h1>todo</h1>
      <ul>
      {{#tasks}}
      <li><input type="checkbox" {{checked}}>  {{item}}</li>
      {{/tasks}}
    </ul>
    </div>

    {{#errors}}
      <div class="error">
        {{ msg }}<br />
      </div>
      {{/errors}}
  </body>
</html>
